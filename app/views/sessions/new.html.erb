<% provide(:title, "ログイン") %>
<div class="container">
  <h1 class="text-center pt-4">ログイン</h1>
  <div class="row justify-content-center mb-4">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path, local: true) do |f| %>
        <div class = 'form-group'>
          <%= f.label 'メールアドレス' %>
          <%= f.email_field :email, class: 'form-control', id: 'user_email' %>
        </div>
        <div class = 'form-group'>
          <%= f.label 'パスワード' %>
          <%= f.password_field :password, class: 'form-control', id: 'user_password' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>ログインしたままにする</span>
          <% end %>
        </div>
        <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
      <% end %>
      <hr>
      <%= link_to 'アカウントをお持ちでない方', signup_path, class: 'btn btn-info btn-block' %>
      <%= link_to 'パスワードを忘れましたか？', '#', class: 'btn btn-secondary btn-block' %>
    </div>
  </div>
</div>