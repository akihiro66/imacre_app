<div class="container pt-3">
  <%= search_form_for @q do |f| %>
    <div class="row">
      <div class="col-md-10">
        <div class='form-group'>
          <%= f.search_field :name_or_materials_name_cont, placeholder: "作品名、材料名で検索", class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-2">
        <div class='form-group'>
          <%= f.submit nil, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>