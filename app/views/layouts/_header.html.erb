<header class="fixed-top">
  <nav class="navbar navbar-expand-lg navbar-light">
    <%= link_to(image_tag("header_logo.jpg", :alt => "アプリのロゴ"), root_path, class: 'navbar-brand') %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <% if logged_in? %>
          <% if current_user.notification == true %>
            <li class="new_notification nav-item ">
          <% else %>
            <li class="no_notification nav-item ">
          <% end %>
            <i class="fas fa-bell"></i>
            <%= link_to "通知", notifications_path, class: 'nav-link' %>
          </li>
          <li class="nav-item ">
            <i class="fas fa-heart"></i>
            <%= link_to "お気に入り", favorites_path, class: 'nav-link' %>
          </li>
          <li class="nav-item ">
            <i class="fas fa-list-alt"></i>
            <%= link_to "製作予定リスト", lists_path, class: 'nav-link' %>
          </li>
          <li class="nav-item dropdown">
            <i class="fas fa-user-cog"></i>
            <%= link_to "ユーザー", current_user, class: 'nav-link dropdown-toggle' %>
            <ul class="dropdown-menu">
              <li><%= link_to 'プロフィール', current_user, class: "nav-link" %></li>
              <li><%= link_to 'ユーザー一覧', users_path, class: "nav-link" %></li>
              <li><%= link_to 'イマクリとは？', about_path, class: "nav-link" %></li>
              <li class="divider"></li>
              <li><%= link_to 'ログアウト', logout_path, method: :delete, class: "nav-link" %></li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <i class="fas fa-question-circle"></i>
            <%= link_to "イマクリとは？", about_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <i class="fas fa-user-plus"></i>
            <%= link_to "ユーザー登録(無料)", signup_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <i class="fas fa-sign-in-alt"></i>
            <%= link_to "ログイン", login_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>