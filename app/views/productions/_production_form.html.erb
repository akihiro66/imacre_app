<%= form_with model: @production, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <span class="picture">
    <%= f.label :picture %> <span class="input-unneed">※任意</span>
    <%= f.file_field :picture, accept: 'image/jpeg,image/png', class: 'form-control', id: 'production_picture' %>
  </span>
  <div class = 'form-group'>
    <%= f.label :name %> <span class="input-need">※必須</span>
    <%= f.text_field :name, class: 'form-control', id: 'production_name' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :description %> <span class="input-unneed">※任意</span>
    <%= f.text_field :description, size: "60x4", class: 'form-control', id: 'production_description' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :material %> [円] <span class="input-unneed">※任意</span>
    <%= f.text_field :material, class: 'form-control', id: 'production_material' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :tips %> <span class="input-unneed">※任意</span>
    <%= f.text_field :tips, size: "30x4", class: 'form-control', id: 'production_tips' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :reference %> <span class="input-unneed">※任意</span>
    <%= f.text_field :reference, class: 'form-control', id: 'production_reference' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :required_time %> [時間] <span class="input-unneed">※任意</span>
    <%= f.text_field :required_time, class: 'form-control', id: 'production_required_time' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :popularity %> [1~5] <span class="input-unneed">※任意</span>
    <%= f.text_field :popularity, class: 'form-control', id: 'production_popularity' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :memo %> <span class="input-unneed">※任意</span>
    <%= f.text_field :memo, class: 'form-control', id: 'production_memo' %>
  </div>
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>
