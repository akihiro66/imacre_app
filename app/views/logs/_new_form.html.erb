<%= form_for(@log) do |f| %>
  <%= hidden_field_tag :production_id, @production.id %>
  <div class="row">
    <div class="col-md-8 col-md-offset-1">
      <div class="field">
        <%= f.text_area :content, placeholder: "制作記録メモ" %>
      </div>
    </div>
    <div class="col-md-3">
      <%= f.submit "制作記録の追加", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>